<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Bienvenida"
        android:layout_width="284dp"
        android:layout_height="101dp"
        android:text="Bienvenido, elige una matricula"
        android:textAlignment="center"
        android:textColorHighlight="#881111"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="61dp" />

    <Button
        android:id="@+id/btn_angelica"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:onClick="irAlCurriculum"
        android:text="329528"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <Button
        android:id="@+id/btn_martin"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:onClick="irAlCurriculum"
        android:shadowColor="#FF5722"
        android:text="319094"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FF5722" />

    <Button
        android:id="@+id/btn_daniel"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:onClick="irAlCurriculum"
        android:shadowColor="#FF5722"
        android:text="329694"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716"
        app:strokeColor="#FF5722" />

</androidx.constraintlayout.widget.ConstraintLayout>